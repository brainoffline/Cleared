<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:theme="@style/AppThemeDark">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:gravity="center"
                android:text="@string/feedback"
                android:textAlignment="gravity" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/happy1"
                    android:layout_width="@dimen/feedback_happy_width"
                    android:layout_height="@dimen/feedback_happy_height"
                    android:layout_margin="@dimen/margin_vsmall"
                    android:alpha="0.5"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/happy1" />

                <ImageButton
                    android:id="@+id/happy2"
                    android:layout_width="@dimen/feedback_happy_width"
                    android:layout_height="@dimen/feedback_happy_height"
                    android:layout_margin="@dimen/margin_vsmall"
                    android:alpha="0.5"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/happy2" />

                <ImageButton
                    android:id="@+id/happy3"
                    android:layout_width="@dimen/feedback_happy_width"
                    android:layout_height="@dimen/feedback_happy_height"
                    android:layout_margin="@dimen/margin_vsmall"
                    android:alpha="0.5"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/happy3" />

                <ImageButton
                    android:id="@+id/happy4"
                    android:layout_width="@dimen/feedback_happy_width"
                    android:layout_height="@dimen/feedback_happy_height"
                    android:layout_margin="@dimen/margin_vsmall"
                    android:alpha="0.5"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/happy4" />

                <ImageButton
                    android:id="@+id/happy5"
                    android:layout_width="@dimen/feedback_happy_width"
                    android:layout_height="@dimen/feedback_happy_height"
                    android:layout_margin="@dimen/margin_vsmall"
                    android:alpha="0.5"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/happy5" />


            </LinearLayout>

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_your_feedback"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/emailaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/send_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send" />

            </LinearLayout>

            <TextView
                android:id="@+id/thankyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:alpha="0"
                android:gravity="center"
                android:text="@string/feedback_thankyou"
                android:textAlignment="gravity"
                android:visibility="invisible"
                tools:alpha="1"
                tools:visibility="visible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_large"/>

        </LinearLayout>



</FrameLayout>
